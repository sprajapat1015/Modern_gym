<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PGC-GYM Landing Page</title>
    <!-- Ion Icons Js -->
    <script type="module" src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.esm.js"></script>
    <script nomodule src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.js"></script>
    <!-- JS -->
    <!-- CSS -->
    <%= stylesheet_link_tag 'home/style' %>
    <%= stylesheet_link_tag 'trainer/show' %>

</head>
<body>
    <!-- Menu -->
    <div class="menu">
        <div class="container flex">
            <!-- Mobile Button -->
            <div class="mobile-btn">
                <ion-icon name="grid"></ion-icon>
            </div>
            <div class="logo">
                <%= image_tag('https://raw.githubusercontent.com/programmercloud/pgc-gym/main/img/logo.png', alt: '') %>
            </div>
            <ul class="nav">
                <li class="nav-item"><%= link_to 'Home', '/' %></li>
                <li class="nav-item"><%= link_to 'Trainer Courses', '#why-us' %></li>
                <li class="nav-item"><%= link_to 'Explore', '#explore' %></li>
                <li class="nav-item"><%= link_to 'Account', user_path(current_user.id) %></li>
                <li class="nav-item"><%=link_to "All Courses", trainer_coach_courses_path(@trainer_coach) %></li>
            </ul>
            <%#= link_to 'Login', '/users/sign_in', class: 'btn' %>
            <%= link_to "Sign Out", destroy_user_session_path, class: 'btn', data: { "turbo-method": :delete } %>
        </div>
    </div>
    <!-- End Menu -->
    <!-- Login Page -->
    <div class="container">
    <div class="flex">

      <div class="header">
        <div class="text">
        </div>
        <div class="visual">
          <%#= image_tag 'path-to-your-image.jpg', alt: 'Login Visual' %>
        </div>
      </div>
    </div>
    <div class="section"style="background: radial-gradient(#111, #071a1a);">
      <div class="flex">

        <table>
          <tr>
            <td>
              <div class="card" style=" margin-left: 19px;">
                <div class="card-body">
                  <h3>Trainer Detail</h3>

                  <h5 class="card-title">Name:</h5>
                  <p class="card-text"><%= @trainer_coach.first_name %> <%= @trainer_coach.last_name %></p>
                  <h5 class="card-title">Mobile N0.:</h5>
                  <p class="card-text"><%= @trainer_coach.phone_number %></p>
                  <h5 class="card-title">Expertise:</h5>
                  <p class="card-text"><%= @trainer_coach.expertise %></p>
                </div>
              </div>
            </td>
        
          </tr>
        </table>
       



   
   
                 
      </div>
    </div>
  </div>


    <!-- Login endPage -->

  

    <!-- Why Us -->
    <div class="section" id="why-us" style="background: radial-gradient(#111, #071a1a);">
        <div class="container flex">
            <div class="text">
              <!-- Trainer courses details start  -->
              <table>


  <tr>
    <td>
      <div class="card" style="width: 60rem; margin-left: 19px;">
        <div class="card-body">
          <h3>Courses Details</h3>

                

            <table class="card-table">
                <thead>
                    <tr>
                        <th>Course ID</th>
                        <th>Class Name</th>
                        <th>Class Description</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Capacity</th>
                        <th>Show Courses</th>
                    </tr>
                </thead>
                <tbody>
                    <% @trainer_coach.courses.each do |course| %>
                        <tr>
                            <td><%= course.id %></td>
                            <td><%= course.class_name %></td>
                            <td><%= course.description %></td>
                            <td><%= course.start_time.in_time_zone('Asia/Kolkata').strftime("%H:%M %Z") %></td>
                            <td><%= course.end_time.in_time_zone('Asia/Kolkata').strftime("%H:%M %Z") %></td>
                            <td><%= course.capacity %></td>
                            <td><a href="/trainer_coaches/<%=@trainer_coach.id%>/courses/<%course.id%>" class="btn btn-primary">Show all Courses</a>
              </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>

        </div>
      </div>
    </td>
  </tr>
</table>

<% if current_user.has_role? :admin %>
<a href="/trainer_coaches/<%=@trainer_coach.id%>/courses/new" class="btn btn-primary">Add Courses</a>
<%end%>  

<% if current_user.has_role? :admin %>
